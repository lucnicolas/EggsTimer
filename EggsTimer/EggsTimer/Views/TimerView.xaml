<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EggsTimer.ViewModels"
             x:Class="EggsTimer.Views.TimerView"
             Title="EGGS TIMER">

    <ContentPage.BindingContext>
        <viewmodels:TimerViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>

            <Button Text="Boiled"
                    Command="{Binding StartBoiledCommand}"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    CornerRadius="20" />
            <Button Command="{Binding StartSoftBoiledCommand}"
                    Text="Soft Boiled"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    CornerRadius="20" />
            <Button Command="{Binding StartHardBoiledCommand}"
                    Text="Hard Boiled"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    CornerRadius="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>